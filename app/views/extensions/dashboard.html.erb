<div class="carousel slide multi-item-carousel" id="theExtensions" data-interval="false">
  <div class="carousel-inner">


    <!--- ----->
    <div class="item active">
      <div class="col-xs-12">
        <div class="extension-place-4">
          <div class="row">
            <%
              options = ['extension-light', 'extension-light-outside', 'extension-fireplace', 'extension-temp']
              text = ['Світло', 'Світло надворі', 'Камін', 'Температура']
              enabled = ['extension-on', '', 'extension-on', 'extension-static']
            %>
            <% 4.times do |i| %>
              <div id="ext-<%= i %>" class="col-xs-6 extension <%= options[i] %> <%= enabled[i] %>">
                <div class='theIcon'>&nbsp;</div>
                <div class="text-center theText">
                  <p>&nbsp;</p>
                  <p><%= text[i] %></p>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <!--- ----->


    <!--- ----->
    <div class="item">
      <div class="col-xs-12">
        <div class="extension-place-4">
          <div class="row">
            <%
               options = ['extension-hot', 'extension-temp-outside', 'extension-watering', 'extension-cam']
               text = ['Опалення', 'Температура надворі', 'Полив', 'Камери']
               enabled = ['', 'extension-static', 'extension-on', 'extension-cam']
            %>
            <% 4.times do |i| %>
                <div id="ext-<%= i %>" class="col-xs-6 extension <%= options[i] %> <%= enabled[i] %>">
                  <div class='theIcon'>&nbsp;</div>
                  <div class="text-center theText">
                    <h4>&nbsp;</h4>
                    <h1><%= text[i] %></h1>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <!--- ----->


    </div>

  </div>

  <a class="left carousel-control" href="#theExtensions" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
  <a class="right carousel-control" href="#theExtensions" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
</div>
